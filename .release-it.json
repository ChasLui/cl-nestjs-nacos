{
  "$schema": "https://unpkg.com/release-it/schema/release-it.json",
  "git": {
    "commitMessage": "chore: release v${version}",
    "tagName": "v${version}",
    "requireCleanWorkingDir": false,
    "requireUpstream": false,
    "requireCommits": true,
    "addUntrackedFiles": false,
    "commit": true,
    "tag": true,
    "push": true,
    "pushArgs": ["--follow-tags"]
  },
  "npm": {
    "publish": true,
    "publishArgs": ["--access", "public"],
    "registry": "https://registry.npmjs.org/",
    "skipChecks": false
  },
  "github": {
    "release": true,
    "releaseName": "v${version}",
    "releaseNotes": null,
    "autoGenerate": true,
    "draft": false,
    "preRelease": false,
    "web": false,
    "tokenRef": "GITHUB_TOKEN"
  },
  "hooks": {
    "before:init": ["echo 'Starting release process for ${name} v${version}'", "pnpm lint", "pnpm test", "pnpm build"],
    "after:git:release": "echo 'Git release completed: ${repo.repository}/releases/tag/v${version}'",
    "after:npm:release": "echo 'NPM package published: https://www.npmjs.com/package/${name}/v/${version}'",
    "after:github:release": "echo 'GitHub release created: ${releaseUrl}'",
    "after:release": [
      "echo 'Successfully released ${name} v${version} to ${repo.repository}'",
      "echo 'Release URL: ${releaseUrl}'"
    ]
  },
  "plugins": {
    "@release-it/conventional-changelog": {
      "preset": {
        "name": "angular"
      },
      "infile": "CHANGELOG.md",
      "header": "# Changelog\n\nAll notable changes to this project will be documented in this file. See [Conventional Commits](https://conventionalcommits.org) for commit guidelines.\n\n",
      "ignoreRecommendedBump": false,
      "strictSemVer": true
    },
    "release-it-pnpm": {
      "publishPath": "."
    }
  }
}
